{{!--
This footer template is shared across all the pages.
--}}

<footer class="m-footer">
  <div class="m-footer__content">
    <p class="m-footer-copyright">
      <span>&copy; {{date format="YYYY"}} Analythium Solutions Inc.</span>
      <br />
      <span><a href="https://blog.analythium.io/privacy/">Privacy policy</a> &centerdot; <a href="https://blog.analythium.io/terms/">Terms of service</a></span>
    </p>
    <nav class="m-footer-social">
      {{#if @site.facebook}}
      <a href="{{facebook_url @site.facebook}}" target="_blank" rel="noopener" aria-label="Facebook">
        <span class="icon-facebook"></span>
      </a>
      {{/if}}
      {{#if @site.twitter}}
      <a href="{{twitter_url @site.twitter}}" target="_blank" rel="noopener" aria-label="Twitter">
        <span class="icon-twitter"></span>
      </a>
      {{/if}}
      <a href="https://www.linkedin.com/company/analythium/" target="_blank" rel="noopener" aria-label="Linkedin">
        <span class="icon-linkedin"></span>
      </a>
      <a href="https://analythium.io/" target="_blank" rel="noopener" aria-label="Website">
        <span class="icon-globe"></span>
      </a>
    </nav>
  </div>
</footer>